@model WebHocTap.Web.ViewModels.PaymentMethodViewModel

@{
    ViewData["Title"] = "Choose Payment Method";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        width: 800px; /* Ví dụ: container rộng 800px */
        margin: 0 auto;
        padding:20px;
    }
    .row {
        width: 70%;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    h2 {
        text-align: center;
        font-size: 2.5em;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    select {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    button {
        padding: 10px 20px;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
    }

        button:hover {
            background-color: #0062cc;
        }
</style>
<div class="container">
<div class="row" style="padding:100px">

    <h2>Choose Payment Method</h2>
    <form asp-action="ProcessPayment" method="post">
        <input type="hidden" asp-for="CategorySubId" />
        <div class="form-group">
            <label for="paymentMethod">Select Payment Method</label>
            <select asp-for="SelectedMethod" class="form-control" id="paymentMethod">
                @foreach (var method in Model.PaymentMethods)
                {
                    <option value="@method">@method</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Proceed to Payment</button>
    </form>
</div>
</div>