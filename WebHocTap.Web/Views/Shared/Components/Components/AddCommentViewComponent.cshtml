@model WebHocTap.Web.ViewModels.CommentVM

<h3>Thêm bình luận</h3>
<form asp-action="AddComment" asp-controller="Comment" method="post">
    @Html.HiddenFor(m => m.IdLesson) <!-- Đảm bảo LessonId được thiết lập đúng -->
    <div>
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(m => m.Content)
    </div>
    <button type="submit" class="btn btn-primary">Gửi bình luận</button>
</form>
